@model IEnumerable<SitePessoal.Models.Escolas>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Criar nova entrada na Tabela</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fotografia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Escola)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (Escolas.Foto != null)
                    {
                        <img src="data:image/jpeg;base64, @Convert.ToBase64String(Escolas.Foto)" class="img-fluid" />

                     }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Escola)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EscolasId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.EscolasId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.EscolasId">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
